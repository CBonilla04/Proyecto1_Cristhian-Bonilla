@{
}
@model Proyecto1_CristhianBonilla.Models.Users;
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Bienvenido</h2>
                    <form asp-controller="Users" asp-action="LogIn" method="get">
                        <div class="form-group">
                            <label>Usuario</label>
                            <input type="text" asp-for="IdUser"  class="form-control" placeholder="Ingrese su identifiación" />
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Ingrese su contraseña">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Message"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>