@{
    Layout = null;
}
@model Proyecto1_CristhianBonilla.ViewModels.UserView;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #343a40;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8">
                <div class="card shadow border-0" style="border-radius: 10px; background-color: rgba(255, 255, 255, 0.9); color: #000000;">
                    <div class="card-body">
                        <h2>Nuevo usuario</h2>
                        <form asp-controller="Users" asp-action="addUser" method="post">
                            <div class="mb-3 mx-4">
                                <label>Identificación <span style="color: red;">*</span></label>
                                <input placeholder="Número de identificación" class="form-control" type="number" asp-for="IdUser" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Nombre <span style="color: red;">*</span></label>
                                <input placeholder="Nombre"  class="form-control" type="text" asp-for="Name" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Primer Apeliido <span style="color: red;">*</span></label>
                                <input placeholder="Primer apellido" class="form-control" type="text" asp-for="Surname" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Segundo Apeliido</label>
                                <input placeholder="Segundo apellido" class="form-control" type="text" asp-for="SecondSurname" />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Email <span style="color: red;">*</span></label>
                                <input placeholder="Email" class="form-control" type="email" asp-for="Email" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Contraseña <span style="color: red;">*</span></label>
                                <input placeholder="Contraseña (Se requieren longitud de 8, mínimo un número, una letra mayúscula y un carácter especial)" class="form-control" type="password" asp-for="Password" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Confirmar Contraseña <span style="color: red;">*</span></label>
                                <input placeholder="Confirmar Contraseña" class="form-control" type="password" asp-for="PasswordCheck" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Edad <span style="color: red;">*</span></label>
                                <input placeholder="Edad" class="form-control" type="number" asp-for="Age" required />
                            </div>
                            <div class="mb-3 mx-4">
                                <label>Preferencias</label>
                                <input placeholder="Preferencias" class="form-control" type="text" asp-for="Preferences" />
                            </div>

                            <div class="mb-3 mx-4">
                                <span style="color: red;">*</span> Campos obligatorios
                            </div>

                            <div class="mb-3 mx-4">
                                <button class="btn btn-primary" type="submit">Guardar</button>
                                <a asp-controller="Login" asp-action="LogIn" class="btn btn-warning">Volver</a>
                            </div>
                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
