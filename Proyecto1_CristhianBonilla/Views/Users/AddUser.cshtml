@model Proyecto1_CristhianBonilla.Models.Users;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo usuario</h2>
        <form asp-controller="Users" asp-action="addUser" method="post">
            <div class="mb-3">
                <label>Identificación</label>
                <input placeholder="Número de identificación" class="form-control" type="number" asp-for="IdUser" />
            </div>
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" type="text" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label>Primer Apeliido</label>
                <input class="form-control" type="text" asp-for="Surname" />
            </div>
            <div class="mb-3">
                <label>Segundo Apeliido</label>
                <input class="form-control" type="text" asp-for="SecondSurname" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input class="form-control" type="email" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label>Contraseña</label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>
            <div class="mb-3">
                <label>Edad</label>
                <input class="form-control" type="number" asp-for="Age" />
            </div>
            <div class="mb-3">
                <label>Preferencias</label>
                <input class="form-control" type="text" asp-for="Preferences" />
            </div>
            
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Users" asp-action="Login" class="btn btn-warning">Volver</a>
            </div>
            @if(ViewData["Message"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Message"]
                </div>
            }
        </form>
    </div>
</div>



